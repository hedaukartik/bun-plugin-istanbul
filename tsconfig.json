{
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types", "./types"],
		"moduleResolution": "node",
		"esModuleInterop": true,
		"target": "ESNext",
		"module": "ESNext",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist"
	}
}
